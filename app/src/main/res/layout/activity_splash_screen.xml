<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_splash"
            android:layout_width="@dimen/dimen150dp"
            android:layout_height="@dimen/dimen150dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_news"
            android:contentDescription="@string/todo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:layout_gravity="center"
            android:text="@string/news_apps"
            android:gravity="center"
            android:textColor="@color/grey_001"
            android:textStyle="bold|italic"
            android:id="@+id/news_title_apps"
            android:textSize="@dimen/textSize20sp" />

    </LinearLayout>

</RelativeLayout>
